<?xml version="1.0" ?>
<propertyTemplates>
	<propertyStore id="databaseConfiguration"
		type="com.hypersocket.properties.DatabasePropertiesFileConfigurationStore">
		<filename>${hypersocket.conf}/database.properties</filename>
	</propertyStore>
	<propertyCategory resourceKey="category.authentication"
		 resourceBundle="AuthenticationService" weight="100">
		<property resourceKey="auth.chooseRealm" inputType="switch"
			defaultValue="true" weight="0" />
	</propertyCategory>
	<propertyCategory resourceKey="category.security" resourceBundle="HypersocketServer" weight="400">
		<property resourceKey="security.knownHosts" inputType="hidden" defaultValue="" weight="0"/>
	    <property resourceKey="security.enableCSRFProtection" inputType="switch" defaultValue="true" weight="0"/>
	    <property resourceKey="security.xFrameOptionsEnabled" inputType="switch" defaultValue="true" weight="100"/>
	    <property resourceKey="security.xFrameOptionsValue" inputType="select" defaultValue="SAMEORIGIN" options="DENY,SAMEORIGIN" weight="200"/>
	</propertyCategory>
	<propertyCategory resourceKey="category.databaseSettings"
		resourceBundle="DatabaseService" weight="200">
		<property resourceKey="jdbc.vendor" inputType="select" defaultValue="MYSQL" options="MYSQL,POSTGRES,MSSQL,DERBY" store="databaseConfiguration"
			allowEmpty="false" weight="100" />
		<property resourceKey="jdbc.database" inputType="text" store="databaseConfiguration"
			allowEmpty="false" weight="200" defaultValue="hypersocket" />	
		<property resourceKey="jdbc.host" inputType="text" store="databaseConfiguration" visibilityDependsOn="jdbc.vendor"
				  visibilityDependsValue="!DERBY" allowEmpty="false" weight="300" defaultValue="" />
		<property resourceKey="jdbc.port" inputType="integer" store="databaseConfiguration"  visibilityDependsOn="jdbc.vendor"
				  visibilityDependsValue="!DERBY" allowEmpty="false" weight="400" defaultValue="3306" minValue="1" maxValue="65535"/>
		<property resourceKey="jdbc.username" inputType="text" store="databaseConfiguration"
			allowEmpty="false" weight="500" defaultValue="" />
		<property resourceKey="jdbc.password" inputType="password" store="databaseConfiguration"
			allowEmpty="false" weight="600" defaultValue="" />		
	</propertyCategory>
</propertyTemplates>